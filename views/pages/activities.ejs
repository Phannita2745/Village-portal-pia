<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-blue-50">
  <%- include('../partials/navbar') %>

  <main class="pt-20 max-w-6xl mx-auto p-6">
    <div class="bg-green-600 text-white rounded-lg px-6 py-3 mb-6">
      <h1 class="text-2xl font-bold">ภาพกิจกรรม</h1>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <% if (!(items && items.length)) { %>
        <div class="text-center text-gray-500 py-12">ยังไม่มีกิจกรรม</div>
      <% } else { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <% items.forEach(a => { 
               const cover = a.image ? ('/uploads/' + a.image) : '/uploads/placeholder.jpg';
          %>
            <a href="/activities/<%= a.id %>" class="block w-full group">
              <div class="rounded overflow-hidden shadow transition group-hover:shadow-lg">
                <img src="<%= cover %>" alt="<%= a.title %>" class="w-full h-48 md:h-56 object-cover">
              </div>
              <div class="mt-3 text-center">
                <h3 class="font-semibold text-gray-800 line-clamp-2"><%= a.title %></h3>
                <p class="text-green-600 text-sm"><%= a.photo_count || 0 %> รูป | ดู <%= a.views || 0 %> ครั้ง</p>
              </div>
            </a>
          <% }) %>
        </div>

        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
          <div class="flex justify-center items-center gap-1 mt-8">
            <a class="px-2 py-1 rounded border text-sm <%= page===1 ? 'opacity-40 pointer-events-none' : 'hover:bg-gray-50' %>"
               href="/activities?page=<%= page-1 %>">‹</a>
            <% for (let i=1;i<=totalPages;i++){ %>
              <a href="/activities?page=<%= i %>"
                 class="px-3 py-1 rounded border text-sm <%= page===i ? 'bg-blue-500 text-white border-blue-500' : 'hover:bg-gray-50' %>"><%= i %></a>
            <% } %>
            <a class="px-2 py-1 rounded border text-sm <%= page===totalPages ? 'opacity-40 pointer-events-none' : 'hover:bg-gray-50' %>"
               href="/activities?page=<%= page+1 %>">›</a>
          </div>
        <% } %>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
